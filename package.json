{
  "name": "fspec",
  "version": "1.0.0",
  "description": "Standardized CLI tool for AI agents to manage Gherkin-based feature specifications",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "fspec": "./dist/index.js"
  },
  "scripts": {
    "build": "vite build && chmod +x dist/index.js",
    "dev": "vite build --watch",
    "install:local": "./scripts/install-local.sh",
    "format": "prettier --write 'src/**/*.ts'",
    "format:spec": "fspec format",
    "test": "vitest",
    "test:watch": "vitest --watch"
  },
  "keywords": [
    "gherkin",
    "cucumber",
    "bdd",
    "specification",
    "ai",
    "claude-code",
    "cage",
    "feature-files",
    "acceptance-criteria"
  ],
  "author": "",
  "license": "MIT",
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@cucumber/gherkin": "^29.0.0",
    "@cucumber/messages": "^25.0.1",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "tinyglobby": "^0.2.10"
  },
  "devDependencies": {
    "@types/node": "^24.5.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.5",
    "vitest": "^2.1.8"
  }
}
